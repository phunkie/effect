{
    "name": "phunkie/effect",
    "description": "A functional effects library for PHP inspired by Scala's cats-effect",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcello Duarte",
            "email": "marcello.duarte@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "phunkie/phunkie": "^0.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phunkie/phunkie-console": "dev-master",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0"

    },
    "suggest": {
        "ext-parallel": "Required for parallel execution using threads. PHP must be compiled with ZTS support."
    },
    "autoload": {
        "psr-4": {
            "Phunkie\\Effect\\": "src/"
        },
        "files": [
            "src/Functions/common.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Phunkie\\Effect\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin"
    }
}
